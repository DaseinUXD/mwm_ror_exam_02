<!--, :url => { :action => "create" }-->

<%= simple_form_for(@user, url: register_path)  do |f| %>
  <fieldset>
    <legend>Registration</legend>

    <div class="form-inputs">
      <%= f.input :name, type: "text", value: ""%>
      <%= f.input :alias, type: "text", value: "" %>
      <%= f.input :email, autocomplete: "off"%>
      <%= f.input :password, value: "" %>
      <%= f.input :password_confirmation, label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create my account",
                   class:      "btn btn-primary",
                   formmethod: "post" %>
    </div>
  </fieldset>
<% end %>