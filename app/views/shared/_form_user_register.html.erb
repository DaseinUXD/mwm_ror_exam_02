<!--, :url => { :action => "create" }-->

<%= simple_form_for @user do |f| %>
  <fieldset>
    <legend>Registration</legend>

    <div class="form-inputs">
      <%= f.input :first_name, type: "text", value: ""%>
      <%= f.input :last_name, type: "text", value: "" %>
      <%= f.input :email, autocomplete: "off"%>
      <%= f.input :password, value: "" %>
      <%= f.input :password_confirmation, label: false %>
      <%#= f.input :alias %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Register",
                   class:      "btn btn-primary",
                   formaction: "users",
                   formmethod: "post" %>
    </div>
  </fieldset>
<% end %>