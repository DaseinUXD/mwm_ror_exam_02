<%= table_for(@items,
              :html=>{:class => 'table table-striped table-bordered table-hover'}) do |t| %>
  <%= t.head(:class=>'thead-dark') do %>
    <%= t.r(:class => 'text-center') do %>
      <%= t.h('Name') %>
      <%= t.h('Information') %>
      <%= t.h('User ID') %>
    <% end %>
  <% end %>
  <%= t.body do |item| %>
    <%= t.r do %>
      <%= t.d(item.name) %>
      <%= t.d(h(item.info)) %>
      <%= t.d(h(item.user_id)) %>
    <% end %>
  <% end %>
<% end %>