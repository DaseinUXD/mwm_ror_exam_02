<!-- generated from the scaffold form template -->
<%= simple_form_for @user, :url => { :action => "create" } do |f| %>
  <fieldset>
    <legend>Registration</legend>

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %>
      <%#= f.input :alias %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Log In', class: "btn btn-success" %>
    </div>
<% end %>

</fieldset>
