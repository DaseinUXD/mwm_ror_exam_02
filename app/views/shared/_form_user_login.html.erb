<%= simple_form_for :session, url: login_path do |f| %>
  <fieldset>
    <legend>Login</legend>

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Log In', class: "btn btn-success",
                   formmethod:               "post" %>
    </div>
  </fieldset>
<% end %>
<div class="row">
<!--  <div class="col-2"></div>-->
  <div class="col-12">
    <label for="register" class="m-2">New user?</label>
    <label id="register">
      <%=link_to "Register now!", register_path %>
    </label>
  </div>
<!--  <div class="col-3"></div>-->
</div>


