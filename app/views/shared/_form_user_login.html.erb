<!-- generated from the scaffold form template -->
<%= simple_form_for @user, :url => { :action => "show" }, :method =>"post"  do |f| %>
  <fieldset>
    <legend>Login</legend>

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Log In', class: "btn btn-success" %>
    </div>
<% end %>

</fieldset>
