    <div class="col-8">
      <%= f.input :content, label: false, placeholder: 'Post something witty here...' %>
    </div>
    <div class="col-4">
      <div class="form-actions">
        <%= f.button :submit, "Idea!",
                     class: "btn btn-primary",
