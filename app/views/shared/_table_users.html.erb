<%= table_for(@users,
              :html => { :class => 'table table-striped table-bordered table-hover', :sortable => true }) do |t| %>
  <%= t.head(:class => 'thead-dark') do %>
    <%= t.r(:class => 'text-center') do %>
      <%= t.h('First Name') %>
      <%= t.h('Last Name') %>
      <%= t.h('Email') %>
    <% end %>
  <% end %>

  <%= t.body do |user| %>
    <%= t.r do %>
      <%= t.d(h(user.first_name)) %>
      <%= t.d(h(user.last_name)) %>
      <%= t.d(h(user.email)) %>
    <% end %>
  <% end %>
<% end %>

